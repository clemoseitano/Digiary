<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/conv_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:hint="Tap to input value"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:singleLine="true"
            android:text=""
            android:textSize="22sp" />

        <TextView
            android:id="@+id/conv_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Result"
            android:textSize="28sp" />

    </LinearLayout>

    <net.tanozin.digiary.calculator.EvenGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        app:columnCount="2"
        app:rowCount="1">

        <Button
            android:id="@+id/paste_conv"
            style="@style/PadButtonStyle.Operator.Text"
            android:layout_weight="0.1"
            android:text="Paste"
            android:textSize="15sp" />

        <Button
            android:id="@+id/copy_conv"
            style="@style/PadButtonStyle.Operator.Text"
            android:layout_weight="0.13"
            android:text="Copy"
            android:textSize="16sp" />
    </net.tanozin.digiary.calculator.EvenGridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|bottom"
            android:text="Conversion"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="1.0">

            <RadioButton
                android:id="@+id/radio_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="From"
                android:textColor="#E100C8E1" />

            <RadioButton
                android:id="@+id/radio_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="To"
                android:textColor="#E1F500BE" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <ListView
            android:id="@+id/conv_types"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="0.5"
            android:choiceMode="singleChoice"
            android:gravity="center" />

        <ListView
            android:id="@+id/conv_choice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.5"
            android:choiceMode="singleChoice"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
