<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ThemeLight" parent="@style/RTE_ThemeLight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkDark</item>

        <item name="rte_icMenuLoad">@drawable/ic_menu_load_dark</item>

        <item name="alertDialogTheme">@style/Theme_Dialog_Dark</item>
    </style>

    <style name="ThemeDark" parent="@style/RTE_ThemeDark">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkDark</item>

        <item name="rte_icMenuLoad">@drawable/ic_menu_load_dark</item>

        <item name="alertDialogTheme">@style/Theme_Dialog_Dark</item>
    </style>

</resources>
